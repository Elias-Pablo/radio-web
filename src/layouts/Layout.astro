---
import "@fontsource-variable/onest";
interface Props {
  title: string;
}
import Header from "../components/Header.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Sitio web Oficial de Gente Comunicaciones, un medio de comunicación de la Región de O'Higgins, Chile. Conectando a la comunidad de la región con música, noticias y entretenimiento."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:url" content="https://www.gentecomunicaciones.cl" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Gente Comunicaciones" />
    <meta property="og:locale" content="es_CL" />
    <meta
      property="og:title"
      content="Gente Comunicaciones, donde todas las voces tienen cabida."
    />
    <meta
      property="og:description"
      content="Gente Comunicaciones un medio de la región de O'Higgins dedicado a informar, entretener y animar a la comunidad con su programación dedicada para todos."
    />
    <meta
      property="og:image"
      content="https://www.gentecomunicaciones.cl/layer-gente.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="gentecomunicaciones.cl" />
    <meta property="twitter:url" content="https://www.gentecomunicaciones.cl" />
    <meta
      name="twitter:title"
      content="Gente Comunicaciones, donde todas las voces tienen cabida."
    />
    <meta
      name="twitter:description"
      content="Gente Comunicaciones un medio de la región de O'Higgins dedicado a informar, entretener y animar a la comunidad con su programación dedicada para todos."
    />
    <meta
      name="twitter:image"
      content="https://www.gentecomunicaciones.cl/layer-gente.png"
    />
  </head>
  <body>
    <Header />
    <slot />
    <SpeedInsights />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    background: black;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
