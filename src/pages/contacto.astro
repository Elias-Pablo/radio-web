---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Micasino from "../components/Micasino.astro";

const socialLinks = [
  {
    name: "Facebook",
    url: "https://www.facebook.com/gentecomunicaciones",
    icon: "/brand-facebook.svg",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/gentecomunicaciones",
    icon: "/brand-instagram.svg",
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/@gentecomunicaciones",
    icon: "/brand-youtube.svg",
  },
];
---

<Layout title="Contacto - Gente Comunicaciones">
  <div
    class="rounded-lg shadow-lg p-8 mx-auto space-y-8 flex justify-center items-center flex-col"
  >
    <div
      class="bg-fuchsia-500 text-white rounded-xl shadow-xl lg:w-auto p-6 flex flex-col items-center"
    >
      <h3 class="text-2xl font-bold mb-6 text-center">
        Síguenos en nuestras Redes Sociales
      </h3>
      <div class="flex justify-center space-x-8">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              class="hover:scale-110 transition-transform duration-200 drop-shadow-xl"
            >
              <img src={link.icon} alt={link.name} class="w-10 h-10" />
            </a>
          ))
        }
      </div>
    </div>

    <div
      class="bg-orange-500 text-white w-full md:w-auto rounded-xl shadow-xl p-6"
    >
      <h3 class="text-2xl font-bold mb-6 text-center">Contáctanos</h3>
      <div class="space-y-6">
        {
          [
            {
              name: "Lorena Contreras Ruz",
              role: "Relaciones Comerciales",
              phone: "+56988694401",
              mail: "ventas@gentecomunicaciones.cl",
            },
            {
              name: "Elías Bahamondes Contreras",
              role: "Representante Legal",
              phone: "+56975122121",
              mail: "admin@gentecomunicaciones.cl",
            },
            {
              name: "Vania Elizabeth Contreras",
              role: "Área Programática",
              phone: "+56955217762",
              mail: "edicion@gentecomunicaciones.cl",
            },
          ].map((contact, index) => (
            <div class="flex flex-col md:flex-row justify-between items-center gap-10">
              <p class="text-md  text-center w-full font-semibold">
                {contact.name}
              </p>
              <p class="text-center italic">{contact.role}</p>
              <div class="flex flex-col md:flex-row justify-center w-auto md:w-2/3 gap-5">
                <a
                  href={`tel:${contact.phone}`}
                  class="text-sky-300 hover:text-sky-500 hover:underline text-center"
                >
                  {contact.phone}
                </a>
                <span class="text-white hidden ">/</span>
                <a
                  href={`mailto:${contact.mail}`}
                  class="text-sky-300 hover:text-sky-500 hover:underline text-center"
                >
                  {contact.mail}
                </a>
                <hr class="w-full border border-white my-4 md:hidden" />
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div
      class="bg-green-500 text-white rounded-xl shadow-xl p-6 md:w-1/2 w-full"
    >
      <h3 class="text-2xl font-bold mb-4 text-center">Nuestra Ubicación</h3>
      <p class="text-center mb-4">
        José Bisquertt N°426 - Oficina 2, Rengo, Chile
      </p>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13458.345156188498!2d-70.865077!3d-34.407531!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzTCsDI0JzI3LjAiUyA3MMKwNTEnNTQuMCJX!5e0!3m2!1ses!2s!4v1603312179342!5m2!1ses!2s"
        width="100%"
        height="300"
        frameborder="0"
        style="border:0;"
        allowfullscreen=""
        aria-hidden="false"
        loading="lazy"
        tabindex="0"
        title="Ubicación de Gente Comunicaciones"
        class="mt-2 border border-gray-300 rounded-md"></iframe>
    </div>
  </div>

  <Footer />
</Layout>
